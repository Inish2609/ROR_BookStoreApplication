<div class="container mt-5">
  <div class="row">
    <% @books.each do |book| %>
      <div class="col-lg-3 col-md-4 col-sm-6">
        <div class="card">
          <%= link_to book_path(book.id) do %>
            <%= image_tag(book.image, class: "card-img-top") if book.image.attached? %>
            <div class="card-body">
              <h5 class="card-title"><%= book.title %></h5>
              <p class="card-text"><%= truncate(book.description, length: 20) %></p>
            </div>
          <% end %>
          <div class="card-footer">
            <%= link_to "Buy Now", book_path(book), method: :post, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>